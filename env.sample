# Astrooverz Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://astrooverz:astrooverz123@db:5432/astrooverz

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection string for caching
# Format: redis://host:port
REDIS_URL=redis://redis:6379

# =============================================================================
# PANCHANGAM CONFIGURATION
# =============================================================================
# Ayanamsa system for sidereal calculations
# Options: Lahiri, Raman, Krishnamurti, Fagan-Bradley
AYANAMSA=Lahiri

# Month system for lunar calendar
# Options: Amanta, Purnimanta
MONTH_SYSTEM=Amanta

# Day boundary for panchangam calculations
# Options: sunrise, midnight
DAY_BOUNDARY=sunrise

# =============================================================================
# JOB SCHEDULING CONFIGURATION
# =============================================================================
# Enable/disable background job scheduling
# Set to true for production, false for development
SCHED_ENABLED=true

# Cities to precompute panchangam data for
# Options: IN_TOP10, IN_TOP50, IN_TOP200, ALL
CITY_PRECOMPUTE=IN_TOP200

# Number of days to precompute ahead
PRECOMPUTE_DAYS=30

# Time to run precompute job (IST)
# Format: HH:MM (24-hour format)
PRECOMPUTE_TIME=02:30

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API version string
API_V1_STR=/api

# Project name for API documentation
PROJECT_NAME=Astrooverz Numerology API

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed CORS origins
# For production, specify your domain: ["https://yourdomain.com"]
# For development, use: ["*"]
BACKEND_CORS_ORIGINS=["*"]

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================
# Default timezone for the application
# Common options: Asia/Kolkata, UTC, America/New_York
DEFAULT_TZ=Asia/Kolkata

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================
# Secret key for JWT tokens (generate a secure random string)
# SECRET_KEY=your-secret-key-here

# Admin password for management interface (optional)
# ADMIN_PASSWORD=your-admin-password

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# BigDataCloud API key for reverse geocoding (optional)
# BIGDATACLOUD_API_KEY=your-api-key-here

# Weather API key for weather data (optional)
# WEATHER_API_KEY=your-weather-api-key

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# Log file path (optional)
# LOG_FILE=/var/log/astrooverz/app.log

# =============================================================================
# PERFORMANCE CONFIGURATION (Optional)
# =============================================================================
# Maximum number of workers for uvicorn
# UVICORN_WORKERS=4

# Maximum number of database connections
# DB_POOL_SIZE=10

# Redis connection pool size
# REDIS_POOL_SIZE=10

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true for development mode
# DEBUG=false

# Enable auto-reload for development
# AUTO_RELOAD=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Domain name for production (used for CORS and SSL)
# DOMAIN=yourdomain.com

# SSL configuration
# SSL_ENABLED=true

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
# Enable metrics collection
# METRICS_ENABLED=true

# Prometheus metrics port
# METRICS_PORT=9090

# Health check interval (seconds)
# HEALTH_CHECK_INTERVAL=30
